<h3>DistanceConverter</h3>

<label for="meter" class="form-label">Meters</label>
<input type="number" class="form-control" id="meter" placeholder="Meters..." @bind="Meters" @bind:event="oninput"/>

@if (_inches != null)
{
    <div class="mt-4">
        <span>In @Meters m equal to @_inches inches.</span>
    </div>
}

@code {
    double? _inches = null;
    [Parameter]
    public double DistanceFactor { get; set; }
    double? _meters = null;


    double? Meters
    {
        get => _meters;
        set
        {
            _meters = value;
            _inches = value / 0.0254d;
        }
    }
}
